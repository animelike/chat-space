.chat-main
  .main-header
    .main-header__group-info
      .main-header__group-info__group-name
        =@group.name
      .main-header__group-info__member-name
        ='Member : ' + @group.users.pluck(:name).join(" ")
    =link_to edit_group_path(@group), class:"edit-btn" do
      Edit

  .messages
    = render @messages

  .form
    = form_for [@group, @message] do |f|
      = f.text_field :content, class: 'form__message', placeholder: 'type a message'
      .form.mask
        = f.label :image, class: 'form__mask__image' do
          =icon('fas', 'image', class: 'icon')
          = f.file_field :image, class: 'hidden'
      = f.submit 'Send', class: 'form__submit-btn'