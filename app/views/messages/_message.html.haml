.message
  .message__log-message
    .message__log-message__upper-info
      .message__log-message__upper-info__talker
        = message.user.name
      .message__log-message__upper-info__date
        = message.created_at.to_s
  .message__lower-message
    - if message.content.present?
      %p.message__lower-message__text
        = message.content
    = image_tag message.image.url, class: 'message__lower-message__image' if message.image.present?